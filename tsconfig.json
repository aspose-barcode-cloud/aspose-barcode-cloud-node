{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2015",
    "target": "es6",
    "lib": ["es6"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "esModuleInterop": true,
    "outDir": "./built/"
  }
}
